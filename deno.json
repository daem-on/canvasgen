{
	"compilerOptions": {
		"lib": [
			"ES2022",
			"DOM",
			"DOM.Iterable"
		],
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"fmt": {
		"useTabs": true
	},
	"tasks": {
		"render": {
			"command": "deno --allow-env --allow-ffi --allow-read --allow-write server/main.ts"
		}
	}
}